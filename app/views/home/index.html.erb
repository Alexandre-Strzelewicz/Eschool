<div class="main-page">
  <div class="page-header">
    <h1>What would you like to learn ? <small>by Web Lab</small></h1>
  </div>

  <% @subjects.each do |s| %>
    <section class="main-page-subjects-section" onclick="window.location = '<%= main_chapter_path(s.url_indice) %>';">
      <div class="page-header">
	<h2>
	  <%= s.subject_name %>
	</h2>
      </div>
      <div class="row">
	<div class="span16">
	  <p><%= s.resume %></p>
	  <% if s.url_indice.present? %>
	    <%= link_to 'Begin to learn', main_chapter_path(s.url_indice) %>
	  <% end %>
	</div>
      </div>
    </section>
  <% end %>
</div>
